<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buoyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="313dp"
        android:background="@mipmap/buoybutton"
        android:shadowColor="@color/common_google_signin_btn_text_dark_focused"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/countdown_textview"
        app:layout_constraintTop_toBottomOf="@+id/countdown_textview" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="183dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="124dp"
        android:fontFamily="@font/aclonica"
        android:text="Buoy"
        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
        android:textSize="@dimen/titleSize2"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/countdown_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/instructionsTextView2"
        android:layout_width="419dp"
        android:layout_height="0dp"
        android:layout_marginTop="103dp"
        android:layout_marginBottom="489dp"
        android:fontFamily="@font/baloo"
        android:text="@string/instructions_string"
        android:textColor="@color/buoybutton_background"
        android:textSize="@dimen/header_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/menu_button"
        app:layout_constraintStart_toStartOf="@+id/titleTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/buoybutton_background"
        android:text="Menu"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instructionsTextView2" />

    <TextView
        android:id="@+id/countdown_textview"
        android:layout_width="85dp"
        android:layout_height="0dp"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="42dp"
        android:fontFamily="@font/aclonica"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/buoyButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>